<UserControl x:Class="AutoUpgradeClient.ProgressInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoUpgradeClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="TestDemo" FontSize="36" Foreground="#468CEB"  HorizontalAlignment="Center" VerticalAlignment="Center"  ></TextBlock>
        <StackPanel Grid.Row="1" Height="80" >
            <ProgressBar Value="20" Maximum="100" Height="10" Foreground="#468CEB" Background="#DCE1E6" BorderThickness="0"></ProgressBar>
            <TextBlock Text="[1/3]正在下载更新包90%" HorizontalAlignment="Center" Foreground="Gray" Margin="0 5 0 0"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
